# Environment Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
# SQLite (Minimal Version)
SQLITE_DATABASE_PATH=./data/basb.sqlite

# PostgreSQL (Standard Version)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USERNAME=basb_user
POSTGRES_PASSWORD=basb_password
POSTGRES_DATABASE=basb_db

# MongoDB (Document Storage)
MONGODB_URI=mongodb://localhost:27017/basb

# Neo4j (Knowledge Graph)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=neo4j_password

# Redis (Caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Vector Databases
# ChromaDB
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=

# AI Service Configuration
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_BASE_URL=https://api.anthropic.com

# Google AI
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GOOGLE_AI_MODEL=gemini-pro

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,txt,md,csv,xlsx,png,jpg,jpeg,gif
UPLOAD_DESTINATION=./uploads

# Web Scraping Configuration
PUPPETEER_HEADLESS=true
PUPPETEER_TIMEOUT=30000
SCRAPE_MAX_PAGES=10
SCRAPE_DELAY=1000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/basb.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# MCP Service Configuration
MCP_SERVER_PORT=3001
MCP_PROTOCOL_VERSION=2024-11-05
MCP_MAX_CONNECTIONS=100

# Obsidian Integration
OBSIDIAN_VAULT_PATH=./obsidian-vault
OBSIDIAN_API_KEY=

# GitHub Integration
GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# Monitoring and Analytics
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Development Configuration
DEV_AUTO_RELOAD=true
DEV_MOCK_AI_SERVICES=false
DEV_SEED_DATA=true